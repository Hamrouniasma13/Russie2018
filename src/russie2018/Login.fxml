   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" height="376.0" stroke="BLACK" strokeType="INSIDE" width="600.0" />
      <ImageView fitHeight="400.0" fitWidth="600.0" opacity="0.79" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Resources/images/login_bg.png" />
         </image>
      </ImageView>
      <PasswordField fx:id="pwTxt" layoutX="199.0" layoutY="160.0" prefHeight="34.0" prefWidth="203.0" promptText="password" />
      <TextField fx:id="emailTxt" layoutX="199.0" layoutY="113.0" prefHeight="34.0" prefWidth="203.0" promptText="Email" />
      <Button fx:id="loginBtn" layoutX="263.0" layoutY="213.0" mnemonicParsing="false" onAction="#onLogin" prefHeight="25.0" prefWidth="76.0" style="-fx-background-color: white; -fx-text-fill: red;" text="Login">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Label fx:id="errorMsg" alignment="CENTER" contentDisplay="CENTER" layoutX="98.0" layoutY="338.0" prefHeight="17.0" prefWidth="379.0" textFill="WHITE" />
   </children>
